<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="1"
    android:layout_column="0"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/idX"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"

            android:text="X"
            android:textSize="24dp" />

        <Button
            android:id="@+id/idPercentage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:text="%"
            android:textSize="24dp"
            
            android:layout_column="2"
            android:layout_columnWeight="0"
            android:layout_row="0" />

        <Button
                android:id="@+id/idC"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:text="C"
                android:textSize="24dp"

                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_row="0"
                android:onClick="Delete" />

        <Button
                android:id="@+id/idCA"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:text="CA"
                android:textSize="24dp"

                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_row="0"
                android:onClick="Delete" />

        <Button
                android:id="@+id/id7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"

                android:onClick="selectNumber"
                android:text="7"
                android:textColor="#673AB7"
                android:textSize="24dp"
                app:strokeColor="#673AB7"
                app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="8"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="9"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
                android:id="@+id/idDivision"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="0"

                android:layout_margin="3dp"
                android:text="รท"
                android:textSize="24dp"
                android:onClick="changeOperator" />

        <Button
                android:id="@+id/id4"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"

                android:onClick="selectNumber"
                android:text="4"
                android:textColor="#673AB7"
                android:textSize="24dp"
                app:strokeColor="#673AB7"
                app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="5"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="4"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
                android:id="@+id/idLess"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="0"

                android:layout_margin="3dp"
                android:onClick="changeOperator"
                android:text="-"
                android:textSize="24dp" />

        <Button
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="1"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="2"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/id3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"

            android:onClick="selectNumber"
            android:text="3"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/idPluss"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="0"

            android:layout_margin="3dp"
            android:onClick="changeOperator"
            android:text="+"
            android:textSize="24dp" />

        <Button
            android:id="@+id/id0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="0"
            android:layout_margin="3dp"

            android:backgroundTint="@color/white"
            android:onClick="selectNumber"
            android:text="0"
            android:textColor="#673AB7"
            android:textSize="24dp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
                android:id="@+id/id."
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:backgroundTint="@color/white"
                android:text="."
                android:textColor="#673AB7"
                android:textSize="24dp"

                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="0"
                android:layout_row="4"
                app:strokeColor="#673AB7"
                app:strokeWidth="2dp"
                android:onClick="selectNumber" />

        <Button
                android:id="@+id/idEqual"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_margin="3dp"

                android:text="="
                android:textSize="24dp"
                android:onClick="Equal" />

    </GridLayout>
</LinearLayout>